<%- include("./header.ejs")  %> 

    <header class="header">
        Play Memory
    </header>
    <section class="welcome">   
        <p>Your memory game link is</p>
        <p class="linkContainer">
            <a title="game url" id="link" href="#"></a>
            <br>
            <i id="copyBtn" title="copy url to clipboard" class="far fa-clipboard"></i>
        </p>
        <p>
            Share that link with someone to play with. Have fun!
        </p>
        <p>
            <i title="decrease card amount" id="minusCardBtn" class="fas fa-minus"></i>
            <span>
                <span id="amountDisplay"></span> Cards
            </span>            
            <i title="increase card amount" id="plusCardBtn" class="fas fa-plus"></i>
        </p>
        <p>
            <i title="decrease round amount" id="minusRoundBtn" class="fas fa-minus"></i>
            <span>
                <span id="roundDisplay"></span> Rounds
            </span>            
            <i title="increase round amount" id="plusRoundBtn" class="fas fa-plus"></i>
        </p>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <script>const id = "<%= id %>";</script>
